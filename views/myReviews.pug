extends base

block content
  .section-user-view
    .user-view__content
      h2.heading-secondary.ma-bt-md My Reviews for #{tour.name}

      form.form--review(data-tour-id=tour._id)
        .form__group
          label(for='rating') Rating
          select(name='rating', id='rating', required)
            option(value='') Select rating
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5
        .form__group
          label(for='review') Your review
          textarea(name='review', id='review', rows='4', placeholder='Write your review here...', required)
        button.btn.btn--green(type='submit') Submit Review

      if reviews.length
        each review in reviews
          .review
            p= review.review
            small Rating: #{review.rating}
